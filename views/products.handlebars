<script>
  // ðŸ‘‰ ID del carrito (por ahora fijo, como venÃ­amos usando)
  const idCarrito = "692f4a6704c6724b6f50e2e5";

  const botones = document.querySelectorAll(".boton-agregar");

  botones.forEach(function (boton) {
    boton.addEventListener("click", function () {
      const li = boton.closest("li");
      const idProducto = li.dataset.id;

      fetch(`/api/carts/${idCarrito}/products/${idProducto}`, {
        method: "POST",
        headers: { "Content-Type": "application/json" }
      })
        .then(function (res) {
          return res.json();
        })
        .then(function () {
          alert("Producto agregado al carrito");
        })
        .catch(function (error) {
          console.log("Error al agregar al carrito:", error);
          alert("No se pudo agregar el producto al carrito");
        });
    });
  });
</script>
