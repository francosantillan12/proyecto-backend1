<h1>{{tituloPagina}}</h1>

<div class="ticket-card">
  <p><strong>Código:</strong> {{ticket.code}}</p>
  <p><strong>Fecha:</strong> {{ticket.purchase_datetime}}</p>
  <p><strong>Comprador:</strong> {{ticket.purchaser}}</p>
  <p><strong>Total:</strong> $ {{ticket.amount}}</p>
</div>

<hr>

<h2>Detalle de compra</h2>

{{#if ticket.products.length}}
  <ul>
    {{#each ticket.products}}
      <li>
        <strong>{{this.title}}</strong>
        — Cantidad: {{this.quantity}}
        — Precio unitario: $ {{this.price}}
        — Subtotal: $ {{multiplicar this.price this.quantity}}
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No hay detalle de productos en este ticket.</p>
{{/if}}

<a href="/products">Volver a productos</a>