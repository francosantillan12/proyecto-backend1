<h1>Registro</h1>

<form id="form-register">
  <label>Nombre</label>
  <input type="text" name="nombre" required>

  <label>Email</label>
  <input type="email" name="email" required>

  <label>Password</label>
  <input type="password" name="password" required>

  <button type="submit">Crear cuenta</button>
</form>

<p id="mensaje"></p>

<script>
  (function () {
    const form = document.getElementById("form-register");
    const mensaje = document.getElementById("mensaje");

    form.addEventListener("submit", function (e) {
      e.preventDefault();

      const data = {
        first_name: form.nombre.value,
        last_name: "-",   // default para pasar la validación
        age: 18,          // default para pasar la validación
        email: form.email.value,
        password: form.password.value
      };

      fetch("/api/sessions/register", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        credentials: "include",
        body: JSON.stringify(data)
      })
        .then(function (res) {
          return res.json().catch(function () { return null; })
            .then(function (info) {
              if (!res.ok) {
                const msg = info && (info.error || info.message)
                  ? (info.error || info.message)
                  : "No se pudo registrar";
                throw new Error(msg);
              }
              return info;
            });
        })
        .then(function (info) {
          mensaje.textContent = "Usuario creado ✅";
          window.location.href = "/login";
        })
        .catch(function (error) {
          mensaje.textContent = error && error.message ? error.message : "Error al registrar";
        });
    });
  })();
</script>
